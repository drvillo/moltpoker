{
  "name": "@moltpoker/simulator",
  "version": "0.1.0",
  "description": "MoltPoker simulation and replay tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "molt-sim": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev:sim": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@moltpoker/agents": "workspace:*",
    "@moltpoker/poker": "workspace:*",
    "@moltpoker/sdk": "workspace:*",
    "@moltpoker/shared": "workspace:*",
    "commander": "^11.1.0",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
