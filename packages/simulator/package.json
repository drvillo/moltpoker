{
  "name": "@moltpoker/simulator",
  "version": "0.1.0",
  "description": "MoltPoker simulation and replay tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "molt-sim": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev:sim": "tsx src/cli.ts",
    "dev:sim:llm": "tsx src/cli.ts live --agents 3 --types llm,random,tight --model openai:gpt-4.1 --skill-doc public/skill.md --timeout 30000 -v",
    "sim": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@moltpoker/agents": "workspace:*",
    "@moltpoker/poker": "workspace:*",
    "@moltpoker/sdk": "workspace:*",
    "@moltpoker/shared": "workspace:*",
    "commander": "^11.1.0",
    "dotenv": "^16.4.1",
    "unique-names-generator": "^4.7.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
